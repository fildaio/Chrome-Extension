{
	"manifest_version": 3,
	"name": "Filda Multisig Wallet",
	"description": "Filda Multi-signature Wallet Extension",
	"version": "1.0",
	"web_accessible_resources": [
		{
			"resources": [
				"scripts/inject.js",
				"scripts/add.js",
				"scripts/abis/MultiSigWalletWithDailyLimit.json",
				"styles/for_dapp.css",
				"fonts/Rubik-Regular.ttf",
				"fonts/DaysOne-Regular.ttf",
				"images/metamask.png"
			],
			"matches": [
				"https://*/*",
				"http://*/*"
			]
		}
	],
	"externally_connectable": {
		"matches": [
			"https://www.filda.io/*"
		]
	},
	"icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
		"48": "images/logo48.png",
		"128": "images/logo128.png"
	},
	"content_security_policy": {
		"sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
	},
	"action": {
		"default_icon": {
			"16": "images/logo16.png",
			"24": "images/logo32.png",
			"32": "images/logo32.png"
		},
		"default_title": "测试",
		"default_popup": "pages/popup.html"
	},
	"permissions": [
		"activeTab",
		"scripting",
		"tabs",
		"nativeMessaging",
		"storage"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	],
	"content_scripts": [
		{
			"js": [
				"scripts/content.js"
			],
			"css": [],
			"matches": [
				"https://*/*",
				"http://*/*"
			],
			"match_about_blank": false,
			"match_origin_as_fallback": false
		}
	],
	"background": {
		"service_worker": "scripts/background.js"
	}
}